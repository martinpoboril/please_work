<%= form_for(@comment) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="field">
    Date of your trip<br />
    <%= f.date_select :date_trip %>
  </div>
  
  <div class="field">
    What place did you visit?<br />
    <%= f.text_field :place %>
  </div>
  
  <div class="field">
    How many people were traveling with you?<br />
    <%= f.number_field :people %>
  </div>
  
  <div class="field">
    What transport did you use?<br />
    <%= f.text_field :transport %>
  </div>
  
  <div class="field">
    Tell us your feeling about the trip:<br />
    <%= f.text_area :feelings %>
  </div>
  
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>